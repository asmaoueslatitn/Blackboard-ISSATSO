@model BlackBoard.Core.ViewModel.StudentDetailViewModel





<div class="container bg-light">
    <div class="py-5 text-center">
    </div>
    @*<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>*@

    <div class="row modal-body">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Student</span>

            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Token:</span>
                    <strong>@Model.Student.Token</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"> Name</h6>
                        <small class="text-muted">@Model.Student.Name</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Phone</h6>
                        
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Date Added</h6>
                        <small class="text-muted">@Model.Student.DateTime.ToString("MMM"), @Model.Student.DateTime.ToString("d ")- @Model.Student.DateTime.ToString("yyyy")-@Model.Student.DateTime.ToString("HH:mm")</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Address</h6>
                      
                    </div>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Attendances</h4>
            <div class="row">
                <table  class="table table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th class="col-md-4 mb-2">Exam Remarks</th>
                            <th class="col-md-4 mb-2">Interpretation</th>
                            <th class="col-md-4 mb-2">Second Interpretation</th>                            <th class="col-md-4 mb-2">Third Interpretation</th>
                            <th class="col-md-4 mb-2">RecoverCandidate</th>
                            <th class="col-md-4 mb-2">Date</th>
                            <th class="col-md-4 mb-2">Teacher</th>
                        </tr>
                    </thead>
                    <tbody>


                       
                    </tbody>

                </table>

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <div class="row ">
            <div class="col-xs-12">
                <a href="@Url.Action("Edit", "Students", new { id= Model.Student.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i>Edit Student</a>

                <a href="@Url.Action("Create", "OpdAttendances", new { id =Model.Student.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i> Add Prescription</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Close</button>

            </div>
        </div>
    </div>

</div>

<script>

         $('.dataTables').DataTable({
             "scrollY": "300px",
             "scrollCollapse": true,
             "paging": false,
             "filter": false,
             "info": false
         });


</script>
